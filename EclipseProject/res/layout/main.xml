<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="@string/uploader_intro"
    android:id="@+id/txtTitle"/>

<ImageView android:layout_width="300px" android:layout_height="300px" android:id="@+id/uploader_image" android:src="@drawable/icon"></ImageView>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uploader_fotobutton" android:id="@+id/uploader_picture"></Button>

<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/uploader_desc" android:contentDescription="@string/uploader_description"></EditText>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uploader_send" android:id="@+id/uploader_send"></Button>

</TableLayout>
